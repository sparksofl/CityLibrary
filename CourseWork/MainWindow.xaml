                    Margin="0, 10, 10, 10"
                    Background="#FE3476E9"
                    Foreground="AliceBlue"
                    FontSize="13"
                    BorderBrush="Transparent"
                    BorderThickness="0">
                    <MenuItem>
                        <MenuItem.Header>
                            <StackPanel>
                                <Image Width="20" Height="20" Source="Icons/2menu.png"/>
                            </StackPanel>
                        </MenuItem.Header>
                        <MenuItem
                            Name="MLastActions"
                            Click="MenuClick"
                            Header="Последние действия"
                            Background="AliceBlue"
                            Foreground="#FE3476E9"/>
